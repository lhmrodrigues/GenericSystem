@page
@model GenericSystem.Web.Pages.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/iCheck/custom.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP&display=swap" rel="stylesheet">
    <link href="~/lib/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>

<style>
    body {         
        background-image: url('resources/background.jpg');
        background-size: cover;
        background-position: center center;
        margin-top: 50px;
    }

    .login {
        display: flex;
        margin-top: -40px;
        align-items: center;
    }

        .login .titulo {
            font-size: 40px;
            font-family: 'Noto Sans JP', sans-serif;
            margin-bottom: 25px;
        }

        .login div {
            text-align: center;
        }

    .centralizer {
        text-align: center;
    }

    input {
        margin-top: 20px;
    }

    button {
        margin-top: 20px;
    }

    .text {
        font-family: 'Noto Sans JP', sans-serif;
        font-size:50px
    }
</style>

<body>
    <div class="offset-1 col-10">
        <div class="card">
            <div class="card-body" style="margin-top:60px">
                <div class="row" style="margin-top:100px ; margin-bottom:100px">
                    <div class="col-md-6" >
                        <img class=" offset-2 col-md-8 centralizer" src="~/resources/logo.png" />
                        @*<div class="text centralizer col-md-8 offset-2">Casa de Carnes</div>*@
                    </div>
                    <div class="col-md-6 login">
                        <div class="row">
                            <div class="col-md-12">
                                <img class="col-md-2" src="~/resources/userImage.png" />
                            </div>
                            <form asp-page="Login" method="post" class="form-horizontal col-md-12" role="form">
                                <div class="col-md-12">
                                    <div class="titulo">Sign In</div>
                                </div>
                                <div class="offset-2 col-md-12">
                                    <input type="text" placeholder="Usuário" asp-for="AuthenticationViewModel.Username" class="form-control col-md-8" />
                                    @Html.ValidationMessageFor(m => m.AuthenticationViewModel.Username, "", new { @class = "text-danger" })
                                </div>
                                <div class="offset-2 col-md-12">
                                    <input type="password" placeholder="Senha" asp-for="AuthenticationViewModel.Password" class="form-control col-md-8" />
                                    @Html.ValidationMessageFor(m => m.AuthenticationViewModel.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-danger col-md-6 "><b>Login</b></button>
                                </div>
                            </form>
                            <hr class="col-md-7" />
                            <div class="col-md-12 centralizer">Não tem cadastro ainda? Clique no botão abaixo.</div>
                            <div class="col-md-12">
                                <button type="button" name="Register" class="btn btn-outline-dark centralizer" data-toggle="modal" data-target="#modalRegister">Cadastre-se</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (Model.Success != null)
    {
        <div class="modal fade" id="modalMessage" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <div>@Model.Message</div>
                        <div class="col-md-12 offset-10">
                            <button type="button" class="btn btn-link" data-dismiss="modal">OK</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="modal fade" id="modalRegister" tabindex="-1" role="dialog">
        @await Html.PartialAsync("_Register")
    </div>
    <script>
        $(document).ready(function () {
            $('#modalMessage').modal('show');
        })
    </script>
</body>
</html>

